
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:background="#009988"
    android:paddingLeft="10dp">



    <LinearLayout
     android:layout_width="match_parent" android:layout_height="wrap_content"
     android:orientation="vertical"
        android:weightSum="1">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"></GridLayout>

        <!--<Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tic Tac Toe"
            android:background="@drawable/tictactoe"
            android:id="@+id/tictacbtn"
            android:onClick="selectTicTac"
            android:layout_gravity="center_horizontal" />-->

        <Button
            android:layout_width="319dp"
            android:layout_height="199dp"
            android:background="@drawable/memorystyle"
            android:id="@+id/memorybtn"
            android:onClick="selectMemory"
            android:elegantTextHeight="false"
            android:layout_margin="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:typeface="sans" />

        <Button
            android:layout_width="319dp"
            android:layout_height="199dp"
            android:text="Coming Soon..."
            android:background="#ffd99934"
            android:id="@+id/launchtictac"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3.56"
            android:layout_marginBottom="@dimen/abc_action_bar_icon_vertical_padding_material" />
        <Button
            android:layout_width="319dp"
            android:layout_height="199dp"
            android:text="In Production..."
            android:background="#ff4b73d9"
            android:id="@+id/inprogress"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3.56"
            android:layout_marginBottom="@dimen/abc_action_bar_icon_vertical_padding_material"/>

    </LinearLayout>
    </ScrollView>